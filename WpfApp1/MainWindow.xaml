<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:models="clr-namespace:WpfApp1.Models"
		 xmlns:controls="clr-namespace:WpfApp1.Controls"
        
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">


    <Grid Margin="5">

       

   
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <ListBox Grid.Column="0"  Width="auto" Name="lbox_NavMenu" SelectionMode="Single" SelectionChanged="lbox_NavMenu_SelectionChanged" BorderThickness="0" Margin="0,0,0,122" Grid.RowSpan="1">
            <controls:NavButton  Margin="3" Padding="6" NavLink="/Pages/AddContact.xaml" Icon="" Height="41" Width="32" />
            <controls:NavButton Margin="3" Padding="6" NavLink="/Pages/ContactsView.xaml" Icon="" />
        </ListBox>

        <Frame Grid.Column="1" Name="frame_Pagefram" NavigationUIVisibility="Hidden" Background="#eeeeee" />

    </Grid>
</Window>